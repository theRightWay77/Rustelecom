@*добавление товара*@

@model Contract
<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th scope="row">ФИО</th>
                <th scope="row">IP</th>
                <th scope="row">Услуга</th>
                <th scope="row">Дата</th>
            </tr>
        </thead>
        <tbody>

            <tr scope="col">
                <td>      
                    <input type="text" name="Name" required>
                    <span asp-validation-for="Name"></span>
                    </td>
                <td> 
                    <input type="text" name="IPAddress" required>
                    <span asp-validation-for="IPAddress"></span>
                </td>
                <td>
                    <input name="ServiceType" required>
                    <span asp-validation-for="ServiceType"></span>
                </td>
                <td>
                    <input type="date" name="Date" required>
                    <span asp-validation-for="Date"></span>
                </td>
            </tr>

        </tbody>
    </table>
    <button asp-controller="Edit" asp-action="SaveNew" type="submit" class="btn btn-success">Сохранить</button>
</form>